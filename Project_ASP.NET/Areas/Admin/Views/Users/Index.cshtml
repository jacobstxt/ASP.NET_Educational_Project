@model List<UserItemViewModel>

@{
    ViewData["Title"] = "Basic Tables - Tables";
}

@* ************** Content ************** *@
<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header">Користувачі</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Icon</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><img class="rounded-circle" style="width:5rem;height:5rem" src="/images/200_@(item.Image != null && item.Image.Any() ? item.Image : "user-icon-trendy-flat-style-600nw-418179856.webp")"/></td>
                        <td>@item.LastName @item.FirstName</td>
                        <td>@item.Email</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="ri-more-2-line"></i></button>
                                <div class="dropdown-menu">                              
                                    <a class="dropdown-item"  asp-route-id="@item.Id" asp-action="Edit"><i class="ri-pencil-line me-1"></i> Edit</a> 
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="ri-delete-bin-6-line me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>