@model CategoryCreateViewModel

<div class="container">
    <form asp-action="Create" class="p-4 shadow rounded bg-light" style="max-width: 600px; margin: auto;">
        <h4 class="mb-4">Створення категорії</h4>

        <!-- Назва категорії -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Назва категорії</label>
            <input asp-for="Name" type="text" class="form-control"  placeholder="Введіть назву категорії" required>
        </div>

        <!-- Опис -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Опис</label>
            <textarea asp-for="Description" class="form-control"  rows="4" placeholder="Введіть опис категорії"></textarea>
        </div>

        <!-- Зображення (URL) -->
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">URL зображення</label>
            <input asp-for="ImageUrl" class="form-control"  placeholder="https://example.com/image.jpg">
        </div>

        <!-- Кнопка -->
        <button type="submit" class="btn btn-primary">Створити категорію</button>
        <a asp-action="Index" class="btn btn-info">Скасувати</a>
    </form>

</div>