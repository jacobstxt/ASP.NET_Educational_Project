@model List<Project_ASP.NET.Models.Category.CategoryItemViewModel>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Категорії мультфільмів</h2>
        <a href="@Url.Action("Create")" class="btn btn-info btn-lg shadow-sm">
                <i class="bi bi-plus-circle"></i> Додати
            </a>
        </div>


    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm ">
                    <img src="@item.Image" class="card-img-top" alt="@item.Name" style="height: 180px; object-fit: cover;">
                    <div class="card-body bg-primary-subtle">
                        <h5 class="card-title fw-bold" style="color: #6c757d;">@item.Name</h5>
                        <p class="card-text" style="color: #6c757d;">@item.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>