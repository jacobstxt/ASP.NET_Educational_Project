@model Project_ASP.NET.Models.User.UserLoginViewModel

@{
    ViewData["Title"] = "Вхід";
}


    <div class="container" style="margin-top:45px;max-width:700px">
    <form asp-action="Login" class="p-4 shadow-lg rounded bg-light" style="align-content:center">
            <h2 class="text-center">Вхід</h2>
     
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
            <label asp-for="Email" class="form-label  fw-semibold text-dark"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label  fw-semibold text-dark"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div>
                <a asp-action="ForgotPassword" class="btn btn-link align-content-lg-start" asp-controller="User">Відновити пароль</a>
            </div>

        <div class="align-items-center" style="margin-top:30px;">
            <button type="submit" style="width:180px;" class="btn btn-primary btn-lg">Увійти</button>
        </div>

        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
